            <LinearGradientBrush>
                <GradientStop Color="AliceBlue" Offset="0" />
            </LinearGradientBrush>
        </Grid.Background>
        <StackPanel Orientation="Vertical">
            <StackPanel>
                <TextBlock Name="txtContent" FontSize="36" FontFamily="Calibri" FontWeight="DemiBold" 
                   HorizontalAlignment="Center" Margin="0 20 0 0" Foreground="#8E3112">
                    <TextBlock.Text>WPF Navigation Help Page</TextBlock.Text>
                </TextBlock>
            </StackPanel>
            <StackPanel Margin="20 0 0 0">
                <Label FontSize="18" FontFamily="Cambria" FontWeight="DemiBold" 
                   Foreground="Black">
                    <Label.Content>Version: 1.0.0.0</Label.Content>
                </Label>
            <Label Content="@2021 developed by Vishal Chauhan"></Label>
            <Label Content="All Rights Reserved"></Label>
