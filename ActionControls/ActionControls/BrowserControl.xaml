<UserControl x:Name="FolderBrowser"
             x:Class="ActionControls.BrowserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ActionControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TextBox Height = "36"  
         HorizontalAlignment = "Left"  
         Margin = "192,88,0,0" Name = "txtBox" FontSize="18" Background="AliceBlue"  
         VerticalAlignment = "Top" Width = "540" VerticalContentAlignment="Center" />

        <Button Content = "Select Folder"  
         Height = "47" HorizontalAlignment = "Left"  
         Margin = "35,80,0,0" Name = "button"  
         VerticalAlignment = "Top" Click = "button_Click" FontSize="18" RenderTransformOrigin="0.411,-0.053" Width="152" />
    </Grid>
</UserControl>
